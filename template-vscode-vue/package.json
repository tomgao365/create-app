{
  "name": "vscode-extension",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.0",
  "publisher": "{{git.org}}",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "vscode": "^1.75.0"
  },
  "main": "dist/extension/index.js",
  "keywords": [
    "vscode"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "hello-world.showHelloWorld",
        "title": "Hello World: Show"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+{{git.url}}.git"
  },
  "bugs": {
    "url": "git+{{git.url}}/issues"
  },
  "homepage": "{{git.url}}/blob/main/README.md",
  "icon": "resources/logo.png",
  "vsce": {
    "dependencies": false,
    "yarn": false
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && vue-tsc --noEmit && vite build",
    "clean": "rimraf ./dist",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"{src,extension,scripts}/**/*.{js,cjs,ts,tsx,vue}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"{src,extension,scripts}/**/*.{css,scss,less,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@tomjs/commitlint": "^3.0.0",
    "@tomjs/eslint": "^2.3.0",
    "@tomjs/prettier": "^1.3.0",
    "@tomjs/stylelint": "^2.3.0",
    "@tomjs/tsconfig": "^1.5.0",
    "@tomjs/vite-plugin-vscode": "^2.2.0",
    "@types/node": "^18.19.33",
    "@types/vscode": "^1.75.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "stylelint": "^16.5.0",
    "tsx": "^4.10.2",
    "typescript": "~5.4.5",
    "vite": "^5.2.11",
    "vue-tsc": "^2.0.17"
  }
}
