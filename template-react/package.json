{
  "name": "template-react",
  "version": "0.0.0",
  "description": "vite + react",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss,less,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@tomjs/commitlint": "^2.0.5",
    "@tomjs/eslint": "^1.1.1",
    "@tomjs/prettier": "^1.0.6",
    "@tomjs/stylelint": "^1.1.1",
    "@tomjs/tsconfig": "^1.0.8",
    "@types/node": "^18.19.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "typescript": "~5.2.2",
    "vite": "^5.0.6"
  }
}
