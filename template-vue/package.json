{
  "name": "template-vue",
  "version": "0.0.0",
  "description": "vite + vue",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx,vue}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@tomjs/commitlint": "^3.0.0",
    "@tomjs/eslint": "^2.3.0",
    "@tomjs/prettier": "^1.3.0",
    "@tomjs/stylelint": "^2.3.0",
    "@tomjs/tsconfig": "^1.5.0",
    "@types/node": "^18.19.26",
    "@vitejs/plugin-vue": "^5.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "typescript": "~5.3.3",
    "vite": "^5.2.2",
    "vue-tsc": "^2.0.7"
  }
}
