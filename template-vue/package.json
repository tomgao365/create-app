{
  "name": "template-vue",
  "version": "0.0.0",
  "description": "vite + vue",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx,vue}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.3.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@tomjs/commitlint": "^2.1.1",
    "@tomjs/eslint": "^1.2.1",
    "@tomjs/prettier": "^1.1.1",
    "@tomjs/stylelint": "^2.1.1",
    "@tomjs/tsconfig": "^1.2.1",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "typescript": "~5.3.3",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  }
}
