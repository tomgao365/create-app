{
  "name": "electron-app",
  "version": "0.0.0",
  "description": "vite + electron + vue",
  "engines": {
    "node": ">=18"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:6888/"
    }
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && vue-tsc --noEmit && vite build && npm run release",
    "release": "tsx ./scripts/release.ts",
    "clean": "rimraf ./dist",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint \"{src,electron,scripts}/**/*.{js,cjs,ts,vue}\" *.{js,cjs,ts} --fix --cache",
    "lint:prettier": "prettier --write \"{src,electron,scripts}/**/*.{js,cjs,ts,vue,json,md}\" *.{js,cjs,ts,json,md}",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@tomjs/commitlint": "^2.0.5",
    "@tomjs/eslint": "^1.1.1",
    "@tomjs/prettier": "^1.0.6",
    "@tomjs/stylelint": "^1.1.0",
    "@tomjs/tsconfig": "^1.0.8",
    "@types/node": "^18.19.3",
    "@types/shelljs": "^0.8.15",
    "@vitejs/plugin-vue": "^4.5.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "shelljs": "^0.8.5",
    "stylelint": "^15.11.0",
    "tree-kill": "^1.2.2",
    "tsx": "^4.6.2",
    "typescript": "~5.2.2",
    "vite": "^5.0.6",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.25"
  }
}
