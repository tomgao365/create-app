{
  "name": "vscode-extension",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.0",
  "publisher": "{{git.org}}",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "vscode": "^1.75.0"
  },
  "main": "dist/extension/index.js",
  "keywords": [
    "vscode"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hello-world.showHelloWorld"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hello-world.showHelloWorld",
        "title": "Hello World: Show"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+{{git.url}}.git"
  },
  "bugs": {
    "url": "git+{{git.url}}/issues"
  },
  "homepage": "{{git.url}}/blob/main/README.md",
  "icon": "resources/logo.png",
  "vsce": {
    "dependencies": false,
    "yarn": false
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && vite build",
    "clean": "rimraf ./dist",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"{src,extension,scripts}/**/*.{js,cjs,ts,tsx}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"{src,extension,scripts}/**/*.{css,scss,less,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@tomjs/commitlint": "^2.2.0",
    "@tomjs/eslint": "^1.3.0",
    "@tomjs/prettier": "^1.3.0",
    "@tomjs/stylelint": "^2.3.0",
    "@tomjs/tsconfig": "^1.4.0",
    "@tomjs/vite-plugin-vscode": "^1.4.0",
    "@tomjs/vscode-extension-webview": "^1.2.0",
    "@types/node": "^18.19.8",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.75.0",
    "@types/vscode-webview": "^1.57.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.0",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3",
    "vite": "^5.0.12"
  }
}
