{
  "name": "{{pkg.name}}",
  "version": "0.0.0",
  "description": "basic node.js template",
  "keywords": [
    "node"
  ],
  "author": {
    "name": "{{user.name}}",
    "email": "{{user.email}}"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+{{git.url}}.git"
  },
  "scripts": {
    "start": "tsx ./scripts/info.ts",
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"{src,scripts,test,examples}/**/*.ts\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"examples/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && np --any-branch --no-yarn --yolo --no-publish --message \"chore: release v%s\""
  },
  "dependencies": {
    "kolorist": "^1.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@jest/globals": "^29.7.0",
    "@kayahr/jest-electron-runner": "^29.11.0",
    "@tomjs/commitlint": "^2.2.0",
    "@tomjs/eslint": "^1.3.0",
    "@tomjs/prettier": "^1.3.0",
    "@tomjs/stylelint": "^2.3.0",
    "@tomjs/tsconfig": "^1.4.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.9",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "vite": ">=2.0.0"
  }
}
