{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tomjs.tomgao.cc/schema/create-app.json",
  "type": "object",
  "title": "Create App JSON Schema",
  "description": "Schema for the provided JSON configuration",
  "properties": {
    "list": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the template group"
          },
          "display": {
            "type": "string",
            "description": "Display name of the template group"
          },
          "variants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the template variant"
                },
                "display": {
                  "type": "string",
                  "description": "Display name of the template variant"
                },
                "templates": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["vue", "react", "node", "electron", "vscode"]
                  },
                  "uniqueItems": true,
                  "description": "An array containing templates to select."
                },
                "examples": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["vue", "react"]
                  },
                  "uniqueItems": true,
                  "description": "An array containing examples to select."
                },
                "packages": {
                  "type": "object",
                  "properties": {
                    "exclude": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Files or folders not included when used in example or package"
                    },
                    "ignore": {
                      "type": "boolean",
                      "description": "Not used for packages"
                    }
                  }
                },
                "workspaces": {
                  "type": "boolean",
                  "description": "Whether to use workspaces"
                },
                "devDependencies": {
                  "type": "boolean",
                  "description": "Whether to use it for devDependencies"
                }
              },
              "required": ["name", "display"]
            }
          }
        },
        "required": ["name", "display"]
      }
    }
  },
  "required": ["list"]
}
