{
  "name": "@tomjs/create-app",
  "version": "0.0.13",
  "description": "create tomjs web app",
  "keywords": [
    "tomjs",
    "front-end",
    "create",
    "app",
    "vite",
    "vue",
    "react"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomgao365/create-app.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "template-*/**"
  ],
  "main": "dist/index.mjs",
  "bin": {
    "create-app": "dist/index.mjs"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{js,cjs,ts}\" *.{js,cjs,ts} --fix --cache",
    "lint:prettier": "prettier --write \"src/**/*.{js,cjs,ts,json,md}\" *.{js,cjs,ts,json,md}",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && np --any-branch --no-yarn --yolo --no-publish --message \"chore: release v%s\""
  },
  "dependencies": {
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@tomjs/commitlint": "^2.0.3",
    "@tomjs/eslint": "^1.0.7",
    "@tomjs/prettier": "^1.0.5",
    "@tomjs/tsconfig": "^1.0.7",
    "@types/minimist": "^1.2.5",
    "@types/node": "^18.18.11",
    "@types/prompts": "^2.4.8",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "np": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  }
}
