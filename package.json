{
  "name": "@tomjs/create-app",
  "version": "0.5.1",
  "description": "create tomjs web app",
  "keywords": [
    "tomjs",
    "front-end",
    "frontend",
    "back-end",
    "backend",
    "create",
    "create-app",
    "app",
    "template",
    "vite",
    "vue",
    "react",
    "electron",
    "node"
  ],
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "main": "dist/index.mjs",
  "bin": {
    "create-app": "dist/index.mjs"
  },
  "files": [
    "dist",
    "template-*/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomgao365/create-app.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"{src,template-*}/**/*.{js,cjs,ts}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"template-*/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "lint:prettier": "prettier --write \"{src,template-*}/**/*.{js,cjs,ts,json,md}\" *.{js,cjs,ts,json,md}",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && np --any-branch --no-yarn --yolo --no-publish --message \"chore: release v%s\""
  },
  "dependencies": {
    "kolorist": "^1.8.0",
    "lodash-es": "^4.17.21",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@tomjs/commitlint": "^2.0.5",
    "@tomjs/eslint": "^1.1.1",
    "@tomjs/prettier": "^1.0.6",
    "@tomjs/stylelint": "^1.1.1",
    "@tomjs/tsconfig": "^1.1.2",
    "@types/lodash-es": "^4.17.12",
    "@types/minimist": "^1.2.5",
    "@types/node": "^18.19.3",
    "@types/prompts": "^2.4.9",
    "@types/shelljs": "^0.8.15",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "stylelint": "^15.11.0",
    "tsup": "^8.0.1",
    "typescript": "~5.2.2"
  }
}
