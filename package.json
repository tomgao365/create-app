{
  "name": "@tomjs/create-app",
  "type": "module",
  "version": "1.2.0",
  "description": "create tomjs web app",
  "keywords": [
    "tomjs",
    "front-end",
    "frontend",
    "back-end",
    "backend",
    "create",
    "create-app",
    "app",
    "template",
    "vite",
    "vue",
    "react",
    "electron",
    "node"
  ],
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "bin": {
    "create-app": "dist/index.js"
  },
  "files": [
    "dist",
    "templates/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjs/create-app.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "tsup --watch",
    "debug": "tsx -r dotenv/config src/index.ts",
    "build": "tsup --minify",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"{src,templates}/**/*.{js,cjs,ts,tsx,vue}\" *.{js,cjs,ts} --fix --cache",
    "lint:stylelint": "stylelint \"templates/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@tomjs/logger": "^1.1.0",
    "@tomjs/node": "^2.2.0",
    "chalk": "^5.3.0",
    "dayjs": "^1.11.11",
    "execa": "^9.2.0",
    "inquirer": "^9.2.23",
    "lodash-es": "^4.17.21",
    "meow": "^13.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@tomjs/commitlint": "^3.3.0",
    "@tomjs/eslint": "^3.2.0",
    "@tomjs/prettier": "^1.4.1",
    "@tomjs/stylelint": "^2.5.0",
    "@tomjs/tsconfig": "^1.6.0",
    "@types/inquirer": "^9.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.34",
    "@types/prompts": "^2.4.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "stylelint": "^16.6.1",
    "tsup": "^8.1.0",
    "tsx": "^4.15.4",
    "type-fest": "^4.20.0",
    "typescript": "~5.4.5"
  }
}
